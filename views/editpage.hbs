<script>
    $('.edit-button').on('click',function(){

    $(this).parent().parent().parent().find('input').removeClass('d-none');
     $(this).parent().parent().find('.save').removeClass('d-none');
     $(this).parent().parent().parent().find('p').addClass('d-none');
     $(this).addClass('d-none');
     $(this).parent().find('.cancel').removeClass('d-none');
})

$('.save').on('click',function(){

    $(this).parent().parent().parent().find('input').addClass('d-none');
     $(this).parent().parent().parent().find('.edit-button').removeClass('d-none');
     $(this).parent().parent().parent().find('p').removeClass('d-none');
     $(this).addClass('d-none');
     $(this).parent().parent().parent().find('.cancel').addClass('d-none');
})

$('.cancel').on('click',function(){

    $(this).parent().parent().parent().find('input').addClass('d-none');
     $(this).parent().parent().find('.save').addClass('d-none');
     $(this).parent().parent().find('.edit-button').removeClass('d-none');
     $(this).parent().parent().parent().find('p').removeClass('d-none');
     $(this).addClass('d-none');
})

</script>