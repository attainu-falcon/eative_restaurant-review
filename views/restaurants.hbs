<body>
    <nav class="navbar navbar-default navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">EATIVE</a>



            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/restaurants">HOME</a>
                    </li>

                    {{!-- <li>
                        <a href="https://www.linkedin.com/in/monika9/">ABOUT</a>
                    </li> --}}
                    <li>
                        <a href="/owner">ADD RESTAURANT</a>

                    </li>
                </ul>
                <div class="collapse navbar-collapse">
                    <ul class=" nav navbar-nav navbar-right">

                        <li><span style="color:antiquewhite; padding-top:15px; margin:15px;">Hello {{loggedInUser.name}}

                                !</span>
                        </li>
                        <li><a href="/logout">LOGOUT</a></li>
                    </ul>
                </div>
            </div>
    </nav>


    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1>Welcome To EATIVE</h1>
                <p>
                    Widest Range Of Delivery Restaurants | Trusted Eative Ratings |
                    Unlimited Choices
                </p>
                <p>

                    <a class="btn btn-primary btn-large" href="#">Sorted By Ratings</a>
                </p>
                </p>
            </div>
        </header>
        <div class="row text-center" style="display:flex;flex-wrap:wrap;">
            {{#each restaurants}}
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="{{this.imageurl}}"/>
                    <div class="caption">
                        <h4>{{this.restaurant}}</h4>
                        <span
                            style="color:aliceblue; font-weight:bold;background-color:rgb(236, 127, 25);;;padding:5px;border-radius: 5px;">
                            Rating:{{avgRating}} </span>

                    </div>
                    <p>
                        <a href="/restaurants/{{this._id}}" class="btn btn-primary">More Info</a>

                    </p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
    <p style="text-align: center;"> Trademark EATIVE 2019</p>
