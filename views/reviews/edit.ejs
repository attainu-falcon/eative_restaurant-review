<% include ../partials/header %>
<div
	class="container"
	style=" background-image: url('https://images.unsplash.com/photo-1490818387583-1baba5e638af?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60');background-repeat: no-repeat;background-position: center; background-size: cover;"
>
	<div class="row">
		<h1 style="text-align: center">Change Review</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form
				action="/restaurants/<%=restaurant_id %>/reviews/<%=review._id %>?_method=PUT"
				method="POST"
			>
				<div class="form-group">
					<input
						class="form-control"
						type="number"
						name="review[rating]"
						value="<%=review.rating%>"
						placeholder="Put a review (1-5) here...."
					/>
				</div>
				<div class="form-group">
					<input
						class="form-control"
						type="text"
						name="review[author]"
						value="<%=review.author%>"
						placeholder="Put your name here...."
					/>
				</div>

				<div class="form-group">
					<button class="btn btn-primary btn-block">Submit a Review</button>
				</div>
			</form>
			<a href="/restaurants/<%= restaurant_id %>">Go Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>
