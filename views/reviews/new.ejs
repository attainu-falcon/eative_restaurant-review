<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center; ">
			Add a new Review to <%=restaurant.name %>
		</h1>
		<div style="width:30%;margin:25px auto;">
			<form action="/restaurants/<%=restaurant._id%>/reviews" method="POST">
				<!-- <div class="form-group">
					<input
						class="form-control"
						type="text"
						name="comment[text]"
						placeholder="comment"
					/>
				</div> -->
				<div class="form-group">
					<input
						class="form-control"
						type="number"
						name="review[rating]"
						placeholder="rating"
					/>
				</div>
				<div class="form-group">
					<input
						class="form-control"
						type="text"
						name="review[author]"
						placeholder="author"
					/>
				</div>

				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block ">Submit!</button>
				</div>
			</form>
			<a href="/restaurants/<%= restaurant._id %>">Go Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer %>
